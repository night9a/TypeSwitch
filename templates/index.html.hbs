    <script>
        // Smooth scrolling for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Header scroll effect
        window.addEventListener('scroll', () => {
            const header = document.querySelector('header');
            if (window.scrollY > 100) {
                header.style.background = 'rgba(249, 245, 236, 0.98)';
                header.style.boxShadow = '0 4px 20px rgba(0,0,0,0.1)';
            } else {
                header.style.background = 'rgba(249, 245, 236, 0.95)';
                header.style.boxShadow = 'none';
            }
        });

        // Animate file particles randomly
        function animateFileParticles() {
            const particles = document.querySelectorAll('.file-particle');
            particles.forEach(particle => {
                const randomX = Math.random() * window.innerWidth;
                const randomY = Math.random() * window.innerHeight;
                particle.style.left = randomX + 'px';
                particle.style.top = randomY + 'px';
            });
        }

        setInterval(animateFileParticles, 8000);

        // Intersection Observer for animations
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe feature cards and format categories
        document.querySelectorAll('.feature-card, .format-category').forEach((card, index) => {
            card.style.opacity = '0';
            card.style.transform = 'translateY(50px)';
            card.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
            observer.observe(card);
        });

        // Animate conversion demo
        const conversionDemo = document.querySelector('.conversion-demo');
        const fileTypes = conversionDemo.querySelectorAll('.file-type');
        
        setInterval(() => {
            const formats = [
                ['PNG', 'JPG'], ['PDF', 'DOC'], ['MP4', 'AVI'], 
                ['WAV', 'MP3'], ['DOCX', 'PDF'], ['GIF', 'WEBP']
            ];
            const randomFormat = formats[Math.floor(Math.random() * formats.length)];
            fileTypes[0].textContent = randomFormat[0];
            fileTypes[1].textContent = randomFormat[1];
        }, 3000);
    </script>
