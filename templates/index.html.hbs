    <style>
        :root {
            --primary: #F97316;
            --primary-dark: #EA580C;
            --accent: #FACC15;
            --text: #1E293B;
            --bg: #F9F5EC;
            --dark-navy: #1F2937;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg);
            color: var(--text);
            overflow-x: hidden;
        }

        /* Animated Background */
        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            opacity: 0.05;
        }

        .file-particle {
            position: absolute;
            width: 8px;
            height: 10px;
            background: var(--primary);
            border-radius: 2px;
            animation: floatFiles 8s ease-in-out infinite;
        }

        .file-particle::before {
            content: '';
            position: absolute;
            top: -2px;
            right: -2px;
            width: 4px;
            height: 4px;
            background: var(--accent);
            border-radius: 0 2px 0 0;
        }

        @keyframes floatFiles {
            0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.3; }
            50% { transform: translateY(-30px) rotate(180deg); opacity: 0.8; }
        }

        /* Header */
        header {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(249, 245, 236, 0.95);
            backdrop-filter: blur(15px);
            z-index: 1000;
            padding: 1rem 0;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(249, 115, 22, 0.1);
        }

        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            font-size: 1.6rem;
            font-weight: 700;
            color: var(--primary);
        }

        .rocket-logo {
            width: 45px;
            height: 45px;
            position: relative;
            animation: rocketHover 3s ease-in-out infinite;
        }

        @keyframes rocketHover {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-5px); }
        }

        .rocket-svg {
            width: 100%;
            height: 100%;
            filter: drop-shadow(0 4px 8px rgba(249, 115, 22, 0.3));
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2.5rem;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--text);
            font-weight: 500;
            transition: all 0.3s ease;
            position: relative;
        }

        .nav-links a::after {
            content: '';
            position: absolute;
            bottom: -5px;
            left: 0;
            width: 0;
            height: 2px;
            background: linear-gradient(45deg, var(--primary), var(--accent));
            transition: width 0.3s ease;
        }

        .nav-links a:hover::after {
            width: 100%;
        }

        .nav-links a:hover {
            color: var(--primary);
        }

        /* Hero Section */
        .hero {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            position: relative;
            background: linear-gradient(135deg, var(--bg) 0%, rgba(249, 204, 21, 0.1) 100%);
        }

        .hero-content {
            max-width: 900px;
            padding: 0 2rem;
            animation: fadeInUp 1s ease-out;
        }

        .hero h1 {
