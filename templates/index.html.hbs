            margin-bottom: 3rem;
            color: var(--text);
            opacity: 0.7;
            animation: fadeIn 1s ease-out 0.9s both;
            line-height: 1.6;
        }

        .conversion-demo {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 2rem;
            margin-bottom: 3rem;
            animation: fadeIn 1s ease-out 1.2s both;
        }

        .file-type {
            background: white;
            padding: 1rem 1.5rem;
            border-radius: 15px;
            font-weight: 600;
            color: var(--text);
            border: 2px solid var(--primary);
            animation: bounce 2s ease-in-out infinite;
        }

        .file-type:nth-child(3) {
            animation-delay: 0.5s;
        }

        .arrow {
            font-size: 2rem;
            color: var(--primary);
            animation: pulse 2s ease-in-out infinite;
        }

        @keyframes bounce {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-10px); }
        }

        .cta-buttons {
